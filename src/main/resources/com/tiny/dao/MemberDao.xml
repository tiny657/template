    INSERT
    INTO `member`
    (`providerUserId`,
    `name`,
    `gender`,
    `email`,
    `locale`,
    `regDate`,
    `lastLoginDate`)
    VALUES (#{providerUserId},
    #{name},
    #{gender},
    #{email},
    #{locale},
    NOW(),
    NOW());
  </insert>

